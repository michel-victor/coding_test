<!-- Password Form -->
<div class="login-page">
  <div class="login-box">
    <div class="login-logo"><%= t('devise.forgot_password_question') %></div>
    <div class="card">
      <div class="card-body login-card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), method: :post) do |f| %>
          <% unless devise_error_messages!.blank? %>
            <% resource.errors.full_messages.each do |message| %>
              <%= render partial: 'layouts/messages', locals: { flash: {alert: message} } %>
            <% end %>
          <% end %>

          <div class="form-group">
            <%= f.label :email, class: 'control-label' %>
            <%= f.text_field :email, autofocus: true, class: 'form-control', required: true %>
          </div>

          <div class="row">
            <div class="col-12">
              <%= f.submit t('devise.send_password_instructions'), class: 'btn btn-block btn-primary' %>
            </div>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
