<% if object.errors.any? %>
  <div class="error toast bg-danger fade show" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <strong class="mr-auto"><%= "#{t("models.#{object.class.name.underscore}.one")} #{t('errors.contains')} #{pluralize(object.errors.count, 'error')}" %></strong>
      <small></small>
      <button data-dismiss="toast" type="button" class="ml-2 mb-1 close" aria-label="Close">
        <span aria-hidden="true">Ã—</span>
      </button>
    </div>
    <div class="toast-body">
      <ul>
        <% object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
